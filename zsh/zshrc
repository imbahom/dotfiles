function startWork(){
cmd="'cd $CODE/Project2/trunk/Developer/client/scripts && vim **/*.lua'"
python ~/.dotfiles/zsh/startWork.py $cmd
}
function readLuaSrc(){
    (cd $CODE/lua-5.1.4 && mvim **/*.c */*.h)
}

